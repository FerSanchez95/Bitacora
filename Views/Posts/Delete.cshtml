@model Bitacora.Models.ModeloPost

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>ModeloPost</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Nota
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Notas)
        </dd>
        <dt class = "col-sm-2">
            Creación
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TimeStamp)
        </dd>
        <dt class="col-sm-2">
            Ultima modificación
        </dt>
        <dd class="col-sm-10">
                @Html.DisplayFor(model => model.UltimaModificacion)
        </dd>
        <dt class = "col-sm-2">
            Bitácora asociada
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BitacoraAsociada.NombreDeBitacora)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="PostID" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-action="Index">Volver</a>
    </form>
</div>
